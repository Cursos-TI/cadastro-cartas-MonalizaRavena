from math import ceil
import tkinter as tk
from tkinter import messagebox

def calcular():
    try:
        marmitas = int(entry_marmitas.get())
        arroz = int(entry_arroz.get())
        feijao = int(entry_feijao.get())
        proteina = int(entry_proteina.get())

        total_arroz = marmitas * arroz
        total_feijao = marmitas * feijao
        total_proteina = (marmitas * proteina) / 1000

        resultado = (f"De acordo com sua dieta:\n"
                     f"Arroz: {ceil(total_arroz)} g\n"
                     f"Feijão: {ceil(total_feijao)} g\n"
                     f"Proteína: {ceil(total_proteina):.1f} kg")

        messagebox.showinfo("Resultado", resultado)
    except ValueError:
        messagebox.showerror("Erro", "Por favor, insira apenas números válidos!")

# --- Interface ---
janela = tk.Tk()
janela.title("App de Marmitas")
janela.geometry("350x350")

tk.Label(janela, text="Quantas marmitas?").pack(pady=5)
entry_marmitas = tk.Entry(janela)
entry_marmitas.pack()

tk.Label(janela, text=" carboidrato por marmita (g):").pack(pady=5)
entry_arroz = tk.Entry(janela)
entry_arroz.pack()

tk.Label(janela, text="Fibras por marmita (g):").pack(pady=5)
entry_feijao = tk.Entry(janela)
entry_feijao.pack()

tk.Label(janela, text="Proteína por marmita (g):").pack(pady=5)
entry_proteina = tk.Entry(janela)
entry_proteina.pack()

tk.Button(janela, text="Calcular", command=calcular).pack(pady=15)

janela.mainloop()
